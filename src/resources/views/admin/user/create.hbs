<div class="app-page-title mb-5 text-center">Thêm người dùng</div>
<form method="post" action="/admin/user/store" enctype="multipart/form-data" class="w-50 mx-auto">
  <!-- Email input -->
  <div class="form-outline mb-4">
    <label class="form-label font-weight-bold" for="form4Example2">Họ và tên(*)</label>
    <input type="text" id="form4Example2" name="fullname" class="form-control" required="true"
      placeholder="Nhập họ và tên " />
  </div>
  <div class="form-outline mb-4">
    <label class="form-label font-weight-bold" for="form4Example2">Email(*)</label>
    <input type="email" id="form4Example2" name="email" class="form-control" required="true"
      placeholder="Nhập email " />
  </div>
  <div class="form-outline mb-4">
    <label class="form-label font-weight-bold" for="form4Example2">Mật khẩu(*)</label>
    <input type="password" id="form4Example2" name="password" class="form-control" required="true"
      placeholder="Nhập mật khẩu " />
  </div>

  <div class="form-outline mb-4">
    <label class="form-label font-weight-bold" for="customFile">Số điện thoại(*)</label>
    <input type="text" name="phone" class="form-control" required="true" placeholder="Nhập số điện thoại " />
  </div>

  <div class="form-outline mb-4">
    <label class="form-label font-weight-bold" for="customFile">Avatar(*)</label>
    <input type="file" id="customFile" name="image" class="form-control" required="true"
      placeholder="Nhập giá cho sản phẩm" required="true">
  </div>
  <div class="form-outline mb-4">
    <label class="form-label font-weight-bold" for="customFile">Địa chỉ(*)</label>
    <input type="text" name="address" class="form-control" required="true" placeholder="Nhập địa chỉ" />
  </div>

  <!-- Checkbox -->

  </div>

  <!-- Submit button -->
  <div class="col-6 col-lg-6 mx-auto">
    <button type="submit" class="btn btn-success btn-block mb-4">Thêm mới</button>
  </div>
</form>